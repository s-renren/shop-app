datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id
  email      String
  signInName String
  createdAt  DateTime
  tasks      Task[]
}

model Task {
  id        String   @id
  label     String
  done      Boolean
  imageKey  String?
  createdAt DateTime
  Author    User     @relation(fields: [authorId], references: [id])
  authorId  String
}

model WishList {
  id    Int    @id @default(autoincrement())
  name  String
  items Item[]
}

model Item {
  id         Int      @id @default(autoincrement())
  url        String
  wishListId Int
  wishList   WishList @relation(fields: [wishListId], references: [id])
}
